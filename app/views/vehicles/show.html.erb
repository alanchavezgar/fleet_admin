<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Vehicle</span>
        <p><%= Vehicle.human_attribute_name(:identifier) + ":" %></p>
        <p><%= @vehicle.identifier %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:current_location) + ":" %></p>
        <p><%= @vehicle.current_location %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:distance_traveled) + ":" %></p>
        <p><%= @vehicle.distance_traveled %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:fuel_consumption) + ":" %></p>
        <p><%= @vehicle.fuel_consumption %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:fuel_consumed) + ":" %></p>
        <p><%= @vehicle.fuel_consumed %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:is_available) + ":" %></p>
        <p><%= @vehicle.is_available %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:city) + ":" %></p>
        <p><%= @vehicle.city_id ? City.find(@vehicle.city_id) : "None" %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:route) + ":" %></p>
        <p><%= @vehicle.route_id ? Route.find(@vehicle.route_id) : "None"  %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:created_at) + ":" %></p>
        <p><%= @vehicle.created_at %></p>
        <br>
        <p><%= Vehicle.human_attribute_name(:updated_at) + ":" %></p>
        <p><%= @vehicle.updated_at %></p>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_vehicle_path(@vehicle) %>
        <%= link_to 'Back', vehicles_path %>
      </div>
    </div>
  </div>
</div>